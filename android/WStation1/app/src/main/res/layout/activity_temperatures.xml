   <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="fill_parent"
       android:keepScreenOn="true"
       android:background="#c6e6fb">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/outdoorlable"
            android:text="@string/outdoorlable"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="#f85a5a"
            android:editable="false"
            android:gravity="left" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/outdoorvalues"
            android:text="@string/outdoorvalues"
            android:textStyle="bold"
            android:textSize="50dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:background="#c6e6fb" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/indoorlable"
            android:text="@string/indoorlable"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="#f85a5a" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/indoorvalues"
            android:text="@string/indoorvalues"
            android:textStyle="bold"
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textIsSelectable="false"
            android:gravity="center_horizontal"
            android:background="#c6e6fb" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/freezerlable"
            android:text="@string/freezerlable"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="#f85a5a"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/freezervalue"
            android:text="@string/freezervalues"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:background="#c6e6fb" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fridgelable"
            android:text="@string/fridgelable"
            android:textStyle="bold"
            android:textSize="30dp"
            android:background="#f85a5a" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fridgevalues"
            android:text="@string/fridgevalues"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textIsSelectable="false"
            android:gravity="center_horizontal" />
    </LinearLayout>
